<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_title_ly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/layout_title_back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/layout_titles_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/left_triangle_white" />
        </LinearLayout>

        <TextView
            android:id="@+id/layout_title_lefttv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/layout_title_back"
            android:gravity="center"
            android:textColor="@color/bg_white_color"
            android:textSize="@dimen/text_normal_size"
            android:visibility="gone" />


        <TextView
            android:id="@+id/layout_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_largle" />


        <TextView
            android:id="@+id/layout_title_righttv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:gravity="center"
            android:textColor="@color/bg_white_color"
            android:textSize="@dimen/text_normal_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/layout_title_righttv_two"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@id/layout_title_righttv"
            android:gravity="center"
            android:textColor="@color/bg_white_color"
            android:textSize="@dimen/text_normal_size"
            android:visibility="gone" />


    </RelativeLayout>

</LinearLayout>